{% extends 'base.html.twig' %}

{% block title %}Listes des produits {{ category.name }}
{% endblock %}


{% block body %}


{% include 'widget/nav.html.twig' %}

	<div class="container">
		<div class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{category.name}} :</h1>
            </div>
            {% for product in product %}
            <div class="col-3">
                <article class="card">
                    <div class="card-body">
                        <h2 class="card-title">{{ product.name }}</h2>
                        <p class="card-text">{{product.description}}</p>
                        <a href="#" class="btn btn-primary">Voir les détails</a>
                    </div>
                </article>
            </div>
            {% endfor %}
        </div>  
	</div>  
	   		

{% include 'widget/footer.html.twig' %}
{% endblock %}
