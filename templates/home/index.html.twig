{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}


{% block body %}


{% include 'widget/nav.html.twig' %}
{% include 'widget/_flash.html.twig' %}

    {% if app.user and app.user.isVerified == false %}
			<div class="alert alert-warning alert-dismissible" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
				<div class="alert-message">
					<strong>Votre compte n'est pas activ√©</strong>, <a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
				</div>
			</div>
    {% endif %}

	<div class="container">
		<h1>Site e-commerce</h1>
		<p>Bienvenue dans notre boutique</p>
		<p>Liste des categories :</p>
		<div class="row">
	{% for category in category %}
		{% if category.parent == null %}
			<div class="col-12">
				<h2>{{category.name}}</h2>
			</div>
		{% else %}
			<div class="col-4">
				<div class="card h-100">
					<div class="card-body">
						<h3 class="card-title">{{category.name}}</h3>
						<a href="{{ path('category_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
					</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
		</div>
	</div>  
	   		

{% include 'widget/footer.html.twig' %}
{% endblock %}
